extends layout

block content
    div.col-sm-6.col-sm-offset-3
        h1
            span.fa.fa-sign-in
            | &nbsp; Login

        if message.length > 0
            div.alert.alert-danger #{message}

        form(action='/login', method='post')
            div.form-group
                label Email
                input.form-control(type='text' name='email' placeholder='Email')
            div.form-group
                label Password
                input.form-control(type='password' name='password' placeholder='Password')
            button.btn.btn-warning.btn-lg(type='submit') Login

        hr

        p Need an account? #[a(href="/signup") on Signup]
        p Or go #[a(href="/") home].

block content-footer