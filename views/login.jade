extends layout

block content
    div.col-sm-6.col-sm-offset-3
        h1
            span.fa.fa-sign-in
            | &nbsp; 로그인

        include ./partial/alertMessage

        form(action='/', method='post')
            div.form-group
                label 이름
                input.form-control(type='text' name='username' placeholder='이름')
            div.form-group
                label 비밀번호
                input.form-control(type='password' name='password' placeholder='비밀번호')
            button.btn.btn-warning.btn-lg(type='submit') 로그인

        hr

        p 이 학교 학생이 아니신가요? #[a(href="/signup") 전학수속]

block content-footer