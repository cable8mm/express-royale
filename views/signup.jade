extends layout

block content
    div.col-sm-6.col-sm-offset-3
        h1
            span.fa.fa-sign-in
            | &nbsp; Signup

        if message.length > 0
            div.alert.alert-danger #{message}

        form(action='/signup', method='post')
            div.form-group
                label Email
                input.form-control(type='text' name='email' placeholder='Email')
            div.form-group
                label Password
                input.form-control(type='password' name='password' placeholder='Password')
            button.btn.btn-warning.btn-lg(type='submit') Signup

        hr

        p Already have an account? #[a(href="/login") on Login]
        p Or go #[a(href="/") home].

block content-footer